#!/bin/sh

#  -e exit immediatley if a simple command  exits with non-zero
#  -u treat unset variables as errors in parameter expressions
#  -C prevent output redirection
set -euC

attach() {
    [ -n "${TMUX:-}" ] &&
        tmux switch-client -t  '=rustlings' ||
        tmux attach-session -t '=rustlings'
}

if tmux has-session -t '=rustlings' 2> /dev/null; then
    attach
    exit 0
fi

tmux new-session -d -s rustlings
tmux split-window -d -h -t '=rustlings:1'
tmux send-keys -t '=rustlings:1.left' 'vi' Enter
tmux send-keys -t '=rustlings:1.right' 'rustlings watch' Enter


